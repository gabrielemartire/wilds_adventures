    <%= form.label :log, style: "display: block" %>
    <%= form.textarea :log %>
    <%= "add some log"%>
  </div>

  <div>
    <%= form.label :level_oxygen, style: "display: block" %>
    <%= form.number_field :level_oxygen %>
  </div>

  <div>
    <%= form.label :level_food, style: "display: block" %>
    <%= form.number_field :level_food %>
  </div>

  <div>
    <%= form.label :level_energy, style: "display: block" %>
    <%= form.number_field :level_energy %>
  </div>

  <div>
    <%= form.submit %>
  </div>
